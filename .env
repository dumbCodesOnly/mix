# HuggingFace API Configuration
HF_API_KEY=DUMMY_KEY_FOR_BUILD_TEST

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration (comma-separated list of allowed origins)
# For development, allow all origins. For production, specify exact domains.
ALLOWED_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
REQUEST_TIMEOUT=300
MAX_RETRIES=3
RETRY_BACKOFF_MULTIPLIER=2.0
INITIAL_RETRY_DELAY=1.0
MAX_RETRY_DELAY=30.0

# Image Processing Configuration
MAX_IMAGE_SIZE=10485760
IMAGE_RESIZE_THRESHOLD=1024
IMAGE_QUALITY=85

# Audio Processing Configuration
MAX_AUDIO_SIZE=52428800

# Model Configuration (optional - uses defaults if not specified)
DEFAULT_TTS_MODEL=espnet/kan-bayashi_ljspeech_vits
DEFAULT_STT_MODEL=openai/whisper-base
DEFAULT_IMAGE_MODEL=stabilityai/stable-diffusion-3-medium
DEFAULT_IMAGE_EDIT_MODEL=stabilityai/stable-diffusion-xl-inpainting
DEFAULT_LLM_MODEL=meta-llama/Llama-2-7b-chat-hf
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
