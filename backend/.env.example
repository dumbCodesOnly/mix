# HuggingFace API Configuration
HF_API_KEY=your_huggingface_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all origins (development only)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
REQUEST_TIMEOUT=300
MAX_RETRIES=3
RETRY_BACKOFF_MULTIPLIER=2.0
INITIAL_RETRY_DELAY=1.0
MAX_RETRY_DELAY=30.0

# Image Processing Configuration
MAX_IMAGE_SIZE=10485760
IMAGE_RESIZE_THRESHOLD=1024
IMAGE_QUALITY=85

# Audio Processing Configuration
MAX_AUDIO_SIZE=52428800

# Model Configuration
# Text-to-Speech
DEFAULT_TTS_MODEL=espnet/kan-bayashi_ljspeech_vits

# Speech-to-Text
DEFAULT_STT_MODEL=openai/whisper-base

# Image Generation
DEFAULT_IMAGE_MODEL=stabilityai/stable-diffusion-3.5-large

# Image Editing
DEFAULT_IMAGE_EDIT_MODEL=stabilityai/stable-diffusion-xl-inpainting

# Large Language Model (Updated to Llama 3.1)
DEFAULT_LLM_MODEL=meta-llama/Llama-3.1-8B-Instruct

# Text Embeddings
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Video Generation Configuration
DEFAULT_TEXT_TO_VIDEO_MODEL=tencent/HunyuanVideo-1.5
DEFAULT_IMAGE_TO_VIDEO_MODEL=Wan-AI/Wan2.2-TI2V-5B
MAX_VIDEO_DURATION=30
MAX_VIDEO_FILE_SIZE=524288000
VIDEO_QUALITY_PRESET=medium
